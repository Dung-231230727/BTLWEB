@model BTLWebVanChuyen.Models.PriceTable
@{
    ViewData["Title"] = "Xóa bảng giá";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fa-solid fa-trash-can fa-3x text-danger"></i>
            </div>
            <h3 class="fw-bold text-dark">Xóa Bảng Giá?</h3>
            <p class="text-muted px-4">Bạn có chắc chắn muốn xóa bảng giá này? Việc này có thể ảnh hưởng đến việc tính phí các đơn hàng mới tại khu vực này.</p>
        </div>

        <div class="card shadow-lg border-0 rounded-4 mb-4">
            <div class="card-body p-4 text-center">
                <h6 class="text-secondary text-uppercase small fw-bold mb-2">Khu vực áp dụng</h6>
                <h2 class="text-primary fw-bold mb-0">@Model.Area?.AreaName</h2>

                <div class="row mt-4 pt-3 border-top g-2">
                    <div class="col-4 border-end">
                        <small class="d-block text-muted text-uppercase" style="font-size: 0.7rem;">Mở cửa</small>
                        <span class="fw-bold text-dark">@Model.BasePrice.ToString("N0")</span>
                    </div>
                    <div class="col-4 border-end">
                        <small class="d-block text-muted text-uppercase" style="font-size: 0.7rem;">Km</small>
                        <span class="fw-bold text-dark">@Model.PricePerKm.ToString("N0")</span>
                    </div>
                    <div class="col-4">
                        <small class="d-block text-muted text-uppercase" style="font-size: 0.7rem;">Kg</small>
                        <span class="fw-bold text-dark">@Model.WeightPrice.ToString("N0")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-3">
            <form asp-action="Delete" method="post" class="flex-grow-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm hover-top">
                    <i class="fa-solid fa-check me-2"></i>Xác nhận Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light flex-grow-1 py-3 fw-bold rounded-pill text-secondary text-center text-decoration-none">Hủy bỏ</a>
        </div>
    </div>
</div>