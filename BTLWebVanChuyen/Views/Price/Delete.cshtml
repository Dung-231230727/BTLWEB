@model BTLWebVanChuyen.Models.PriceTable

@{
    ViewData["Title"] = "Xóa cước phí";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fa-solid fa-trash-can fa-3x text-danger"></i>
            </div>
            <h3 class="fw-bold text-dark">Xóa Bảng Giá?</h3>
            <p class="text-muted px-4">Bạn có chắc chắn muốn xóa cấu hình cước phí này? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="card shadow-lg border-0 rounded-4 mb-4">
            <div class="card-body p-4">
                <h5 class="text-primary fw-bold border-bottom pb-3 mb-3 text-center">Chi tiết bảng giá</h5>
                <dl class="row g-2">
                    <dt class="col-sm-5 text-secondary small text-uppercase">Khu vực</dt>
                    <dd class="col-sm-7 fw-bold text-dark">@Model.Area?.AreaName</dd>

                    <dt class="col-sm-5 text-secondary small text-uppercase">Giá cơ bản</dt>
                    <dd class="col-sm-7 fw-bold text-success">@Model.BasePrice.ToString("N0") ₫</dd>

                    <dt class="col-sm-5 text-secondary small text-uppercase">Giá / km</dt>
                    <dd class="col-sm-7">@Model.PricePerKm.ToString("N0") ₫</dd>

                    <dt class="col-sm-5 text-secondary small text-uppercase">Giá / kg</dt>
                    <dd class="col-sm-7">@Model.WeightPrice.ToString("N0") ₫</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex gap-3">
            <form asp-action="Delete" method="post" class="flex-grow-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm hover-top">
                    <i class="fa-solid fa-check me-2"></i>Xác nhận Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light w-100 py-3 fw-bold rounded-pill shadow-sm text-secondary hover-top">
                <i class="fa-solid fa-xmark me-2"></i>Hủy bỏ
            </a>
        </div>
    </div>
</div>