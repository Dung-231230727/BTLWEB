@model BTLWebVanChuyen.Models.PriceTable
@{
    ViewData["Title"] = "Chi tiết bảng giá";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-tag fa-2x text-info"></i>
                </div>
                <h3 class="fw-bold text-dark">Chi Tiết Giá Cước</h3>
                <p class="text-muted">@Model.Area?.AreaName</p>
            </div>

            <div class="card-body p-4">
                <ul class="list-group list-group-flush rounded-4 shadow-sm">
                    <li class="list-group-item p-3 d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-secondary">Giá mở cửa</span>
                        <span class="fw-bold text-primary fs-5">@Model.BasePrice.ToString("N0") đ</span>
                    </li>
                    <li class="list-group-item p-3 d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-secondary">Đơn giá Km</span>
                        <span class="fw-bold text-dark">@Model.PricePerKm.ToString("N0") đ/km</span>
                    </li>
                    <li class="list-group-item p-3 d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-secondary">Đơn giá Kg</span>
                        <span class="fw-bold text-dark">@Model.WeightPrice.ToString("N0") đ/kg</span>
                    </li>
                </ul>

                <div class="d-grid gap-2 mt-4">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning flex-grow-1 rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-light flex-grow-1 rounded-pill fw-bold text-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>