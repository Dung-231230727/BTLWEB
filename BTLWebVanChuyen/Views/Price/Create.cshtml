@model BTLWebVanChuyen.Models.PriceTable
@{
    ViewData["Title"] = "Thêm bảng giá mới";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-money-bill-wave fa-2x text-primary"></i>
                </div>
                <h3 class="fw-bold text-dark">@ViewData["Title"]</h3>
                <p class="text-muted">Thiết lập giá cước cho khu vực</p>
            </div>

            <div class="card-body p-4 pt-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Khu vực áp dụng</label>
                        <select asp-for="AreaId" class="form-select bg-light" style="height: 50px;" asp-items="ViewBag.AreaId">
                            <option value="">-- Chọn khu vực --</option>
                        </select>
                        <span asp-validation-for="AreaId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Giá mở cửa (VNĐ)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-door-open text-muted"></i></span>
                            <input asp-for="BasePrice" class="form-control bg-light border-start-0" type="number" placeholder="VD: 15000" />
                            <span class="input-group-text bg-light">đ</span>
                        </div>
                        <span asp-validation-for="BasePrice" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Đơn giá theo Km (VNĐ/km)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-road text-muted"></i></span>
                            <input asp-for="PricePerKm" class="form-control bg-light border-start-0" type="number" placeholder="VD: 5000" />
                            <span class="input-group-text bg-light">đ/km</span>
                        </div>
                        <span asp-validation-for="PricePerKm" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Đơn giá theo Khối lượng (VNĐ/kg)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-weight-hanging text-muted"></i></span>
                            <input asp-for="WeightPrice" class="form-control bg-light border-start-0" type="number" placeholder="VD: 2000" />
                            <span class="input-group-text bg-light">đ/kg</span>
                        </div>
                        <span asp-validation-for="WeightPrice" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary py-3 rounded-pill fw-bold shadow-sm hover-top">
                            <i class="fa-solid fa-check me-2"></i>Lưu bảng giá
                        </button>
                        <a asp-action="Index" class="btn btn-light py-3 rounded-pill fw-bold text-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}