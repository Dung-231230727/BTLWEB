@model IEnumerable<BTLWebVanChuyen.Models.PriceTable>
@{
    ViewData["Title"] = "Quản lý Bảng giá";
    var isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Cấu hình</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-tags me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-top">
            <i class="fa-solid fa-plus me-2"></i>Thêm bảng giá
        </a>
    }
</div>

@* === BỘ LỌC KHU VỰC (Đã cập nhật nút Lọc) === *@
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-body bg-light rounded-4 p-4">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-map text-muted"></i></span>
                    <select name="filterAreaId" class="form-select border-start-0" asp-items="ViewBag.AreaId">
                        <option value="">-- Tất cả Khu vực --</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
                        <i class="fa-solid fa-filter me-1"></i> Lọc
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-bold" title="Xóa bộ lọc">
                        <i class="fa-solid fa-rotate-right me-1"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success rounded-4 shadow-sm mb-4"><i class="fa-solid fa-check-circle me-2"></i> @TempData["Message"]</div>
}

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Khu vực áp dụng</th>
                        <th>Giá mở cửa</th>
                        <th>Đơn giá Km</th>
                        <th>Đơn giá Kg</th>
                        @if (isAdmin)
                        {
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-map-location-dot text-primary"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.Area?.AreaName</span>
                                </div>
                            </td>
                            <td><span class="fw-bold text-success">@item.BasePrice.ToString("N0") đ</span></td>
                            <td class="text-muted">@item.PricePerKm.ToString("N0") đ/km</td>
                            <td class="text-muted">@item.WeightPrice.ToString("N0") đ/kg</td>
                            @if (isAdmin)
                            {
                                <td class="text-center pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning" title="Sửa"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Xóa"><i class="fa-solid fa-trash-can"></i></a>
                                    </div>
                                </td>    
                             }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-tags fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có bảng giá nào được thiết lập.</p>
            </div>
        }
    </div>
</div>
