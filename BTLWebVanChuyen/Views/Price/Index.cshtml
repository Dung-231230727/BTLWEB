@model IEnumerable<BTLWebVanChuyen.Models.PriceTable>

@{
    ViewData["Title"] = "Quản lý cước phí";
    var isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Quản lý</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-tags me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
    @if (isAdmin)
    {
        <a class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-top" asp-action="Create">
            <i class="fa-solid fa-plus me-2"></i>Thêm cước mới
        </a>
    }
</div>

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-4 ps-4 text-secondary text-uppercase font-weight-bold small border-0">Khu vực</th>
                        <th class="py-4 text-secondary text-uppercase font-weight-bold small border-0">Giá cơ bản</th>
                        <th class="py-4 text-secondary text-uppercase font-weight-bold small border-0">Giá / km</th>
                        <th class="py-4 text-secondary text-uppercase font-weight-bold small border-0">Giá / kg</th>
                        @if (isAdmin)
                        {
                            <th class="py-4 pe-4 text-center text-secondary text-uppercase font-weight-bold small border-0" style="width: 150px;">Thao tác</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-map-location-dot text-primary"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.Area?.AreaName</span>
                                </div>
                            </td>
                            <td class="py-3 text-success fw-bold">@item.BasePrice.ToString("N0") ₫</td>
                            <td class="py-3 text-muted"><i class="fa-solid fa-road me-1 text-secondary"></i> @item.PricePerKm.ToString("N0") ₫</td>
                            <td class="py-3 text-muted"><i class="fa-solid fa-weight-hanging me-1 text-secondary"></i> @item.WeightPrice.ToString("N0") ₫</td>
                            @if (isAdmin)
                            {
                                <td class="pe-4 py-3 text-center">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a class="btn btn-light text-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Sửa">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a class="btn btn-light text-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-tag fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có bảng giá nào được thiết lập.</p>
            </div>
        }
    </div>
</div>
