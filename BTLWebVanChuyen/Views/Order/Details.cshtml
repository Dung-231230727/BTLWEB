@model BTLWebVanChuyen.Models.Order
@using BTLWebVanChuyen.Utility
@using BTLWebVanChuyen.Models
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    var shippers = ViewBag.Shippers as List<BTLWebVanChuyen.Models.Employee> ?? new List<BTLWebVanChuyen.Models.Employee>();
    var warehouses = ViewBag.Warehouses as List<BTLWebVanChuyen.Models.Warehouse> ?? new List<BTLWebVanChuyen.Models.Warehouse>();
    var deliveryWarehouses = ViewBag.DeliveryWarehouses as List<BTLWebVanChuyen.Models.Warehouse> ?? new List<BTLWebVanChuyen.Models.Warehouse>();

    string currentUserName = User.Identity?.Name ?? string.Empty;
    bool isCrossArea = Model.PickupAreaId != Model.DeliveryAreaId;
    bool isFinalState = Model.Status == OrderStatus.Delivered || Model.Status == OrderStatus.Returned || Model.Status == OrderStatus.Cancelled;
    bool senderMustPayOnline = Model.Payer == PayerType.Sender && Model.PaymentMethod == "Online" && Model.PaymentStatus != PaymentStatus.Paid;
    // Logic hiển thị nút Thu Tiền cho Shipper
    bool showShipperCollectBtn = false;
    if (User.IsInRole("Shipper") && Model.PaymentStatus == PaymentStatus.Unpaid)
    {
        // Case 1: Thu khi đi lấy (Người gửi trả tiền mặt)
        if (Model.Status == OrderStatus.Picking && Model.Payer == PayerType.Sender && Model.PaymentMethod == "COD")
        {
            showShipperCollectBtn = true;
        }
        // Case 2: Thu khi đi giao (Người nhận trả tiền)
        else if (Model.Status == OrderStatus.Delivering && Model.Payer == PayerType.Receiver)
        {
            showShipperCollectBtn = true;
        }
    }
    // Lấy ID khu vực của Dispatcher hiện tại (nếu là Dispatcher)
    int? currentDispatcherAreaId = ViewBag.CurrentDispatcherAreaId as int?;
}

<div class="row justify-content-center mt-4">
    <div class="col-md-10 col-lg-8">
        @* === [MỚI] KHỐI THANH TOÁN CHO KHÁCH HÀNG (NGƯỜI GỬI) === *@
        @if (User.IsInRole("Customer") && senderMustPayOnline && !isFinalState)
        {
            <div class="alert alert-warning border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center justify-content-between flex-wrap">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-wallet fa-2x me-3 text-warning"></i>
                    <div>
                        <h6 class="fw-bold mb-0">Yêu cầu thanh toán</h6>
                        <small>Đơn hàng cần thanh toán Online để được xử lý.</small>
                    </div>
                </div>
                <a asp-action="Pay" asp-route-id="@Model.Id" class="btn btn-success fw-bold rounded-pill px-4 shadow-sm mt-3 mt-sm-0">
                    <i class="fa-solid fa-credit-card me-2"></i> Thanh toán VNPay
                </a>
            </div>
        }

        <div class="card shadow-lg border-0 rounded-4">
            @* --- HEADER --- *@
            <div class="card-header bg-primary text-white p-4 rounded-top-4 d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold"><i class="fa-solid fa-circle-info me-2"></i> @ViewData["Title"]</h4>
                    <small class="opacity-75">Mã vận đơn: #@Model.TrackingCode</small>
                </div>
                <span class="badge bg-white text-primary fs-6 rounded-pill px-3 py-2">@Model.Status.GetDisplayName()</span>
            </div>

            <div class="card-body p-4">
                @* --- THÔNG TIN CHUNG --- *@
                <div class="row g-4">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-primary fw-bold mb-3 border-bottom pb-2">Thông tin chung</h6>
                        <dl class="row g-2">
                            <dt class="col-sm-5 text-secondary small text-uppercase">Người gửi</dt>
                            <dd class="col-sm-7 fw-bold">@Model.Customer?.User?.FullName</dd>
                            <dt class="col-sm-5 text-secondary small text-uppercase">Người nhận</dt>
                            <dd class="col-sm-7 fw-bold">@Model.ReceiverName</dd>
                            <dt class="col-sm-5 text-secondary small text-uppercase">SĐT người nhận</dt>
                            <dd class="col-sm-7 fw-bold">@Model.ReceiverPhone</dd>
                            <dt class="col-sm-5 text-secondary small text-uppercase">Dispatcher</dt>
                            <dd class="col-sm-7">@(Model.Dispatcher?.User?.FullName ?? "Chưa gán")</dd>
                            <dt class="col-sm-5 text-secondary small text-uppercase">Shipper</dt>
                            <dd class="col-sm-7">@(Model.Shipper?.User?.FullName ?? "Chưa gán")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-primary fw-bold mb-3 border-bottom pb-2">Hành trình & Chi phí</h6>
                        <dl class="row g-2">
                            <dt class="col-sm-5 text-secondary small text-uppercase">Điểm lấy</dt>
                            <dd class="col-sm-7">
                                @Model.PickupArea.AreaName <br />
                                <span class="text-muted small">(@Model.PickupAddress)</span>
                                @if (Model.PickupWarehouse != null)
                                {
                                    <div class="mt-1"><span class="badge bg-light text-dark border"><i class="fa-solid fa-warehouse me-1"></i> Kho nhập: @Model.PickupWarehouse.Name</span></div>
                                }
                            </dd>

                            <dt class="col-sm-5 text-secondary small text-uppercase">Điểm giao</dt>
                            <dd class="col-sm-7">
                                @Model.DeliveryArea.AreaName <br />
                                <span class="text-muted small">(@Model.DeliveryAddress)</span>
                                @if (Model.DeliveryWarehouse != null)
                                {
                                    <div class="mt-1"><span class="badge bg-light text-dark border"><i class="fa-solid fa-warehouse me-1"></i> Kho xuất: @Model.DeliveryWarehouse.Name</span></div>
                                }
                            </dd>

                            <dt class="col-sm-5 text-secondary small text-uppercase">Thanh toán</dt>
                            <dd class="col-sm-7">
                                @if (Model.PaymentStatus == PaymentStatus.Paid)
                                {
                                    <span class="badge bg-success">Đã thanh toán</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                                }
                                <div class="small text-muted">(@Model.Payer.GetDisplayName() - @Model.PaymentMethod)</div>
                            </dd>
                            <dt class="col-sm-5 text-secondary small text-uppercase">Tổng phí</dt>
                            <dd class="col-sm-7 fs-5 text-success fw-bold">@Model.TotalPrice.ToString("N0") đ</dd>
                        </dl>
                    </div>
                </div>

                <hr class="my-4">
                <h6 class="text-uppercase text-success fw-bold mb-3 border-bottom pb-2">Nhật ký trạng thái</h6>
                <div class="timeline" style="max-height: 200px; overflow-y: auto;">
                    @if (Model.OrderLogs != null)
                    {
                        foreach (var log in Model.OrderLogs.OrderByDescending(l => l.Time))
                        {
                            <div class="border-start border-2 border-success ps-3 mb-3 ms-2">
                                <p class="mb-0 fw-bold text-dark">@log.Status.GetDisplayName()</p>
                                <small class="text-muted">@log.Time.ToString("dd/MM/yyyy HH:mm") - @log.Note</small>
                            </div>
                        }
                    }
                </div>

                @* === QUẢN LÝ ĐƠN HÀNG === *@
                @if (User.Identity!.IsAuthenticated && !isFinalState)
                {
                    <hr class="my-4">
                    <h5 class="text-primary fw-bold mb-4"><i class="fa-solid fa-cog me-2"></i> Quản lý Đơn hàng</h5>

                    @* --- [MỚI] CUSTOMER: HỦY ĐƠN --- *@
                    @if (User.IsInRole("Customer") && Model.Status == OrderStatus.Pending)
                    {
                        <div class="text-end mb-3">
                            <button type="button" id="btn-customer-cancel" class="btn btn-outline-danger rounded-pill fw-bold">
                                <i class="fa-solid fa-xmark me-2"></i> Hủy đơn hàng
                            </button>
                        </div>
                    }

                    @* --- DISPATCHER CONTROL --- *@
                    @if (User.IsInRole("Dispatcher"))
                    {
                        if (senderMustPayOnline)
                        {
                            <div class="alert alert-danger d-flex align-items-center rounded-3">
                                <i class="fa-solid fa-ban me-2 fa-lg"></i>
                                <div><strong>Chưa thể điều phối:</strong> Khách hàng chưa thanh toán Online.</div>
                            </div>
                        }
                        else
                        {
                            @* A. GÁN LẤY HÀNG (Chỉ hiện cho Dispatcher KHU VỰC LẤY) *@
                            @if ((Model.Status == OrderStatus.Pending || Model.Status == OrderStatus.PickupFailed)
                                            && currentDispatcherAreaId == Model.PickupAreaId)
                            {
                                <div class="card shadow-sm border-primary mb-3">
                                    <div class="card-body p-3">
                                        <h6 class="fw-bold text-primary">Điều phối Lấy hàng (Tại @Model.PickupArea.AreaName)</h6>
                                        <form asp-action="Assign" method="post" class="assign-form d-flex gap-2 flex-wrap">
                                            <input type="hidden" name="orderId" value="@Model.Id" />
                                            <div class="flex-grow-1">
                                                <select name="shipperId" class="form-select" required>
                                                    <option value="">-- Chọn Shipper --</option>@foreach (var s in shippers) {
                                                    <option value="@s.Id">@s.User!.FullName</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="flex-grow-1">
                                            <select name="warehouseId" class="form-select" required>
                                                <option value="">-- Chọn Kho --</option>@foreach (var w in warehouses) {
                                                <option value="@w.Id">@w.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="w-100 text-end mt-2"><button class="btn btn-primary rounded-pill px-4 fw-bold">Gán Lấy</button></div>
                                </form>
                                @if (Model.Status == OrderStatus.PickupFailed)
                                {
                                    <div class="mt-2 text-end"><button onclick="updateOrderStatus(@Model.Id, '@OrderStatus.Cancelled')" class="btn btn-danger btn-sm rounded-pill">Hủy đơn</button></div>
                                }
                            </div>
                        </div>
                    }

                    @* B. LUÂN CHUYỂN (Chỉ hiện cho Dispatcher KHU VỰC LẤY) *@
                    @if (isCrossArea && Model.Status == OrderStatus.PickupSuccess && currentDispatcherAreaId == Model.PickupAreaId)
                    {
                        <div class="card shadow-sm border-warning mb-3 bg-light">
                            <div class="card-body p-3">
                                <h6 class="fw-bold text-warning">Luân chuyển liên khu vực</h6>
                                <form asp-action="StartTransfer" method="post" class="assign-form d-flex gap-2 flex-wrap align-items-end">
                                    <input type="hidden" name="orderId" value="@Model.Id" />
                                    <div class="flex-grow-1">
                                        <label class="small text-muted">Kho đích:</label><select name="deliveryWarehouseId" class="form-select" required>
                                            <option value="">-- Chọn kho --</option>@foreach (var dw in deliveryWarehouses) {
                                            <option value="@dw.Id">@dw.Name</option>
                                        }
                                    </select>
                                </div>
                                <button class="btn btn-warning fw-bold rounded-pill px-4">Bắt đầu vận chuyển</button>
                            </form>
                        </div>
                    </div>
                }

                @* C. NHẬP KHO ĐÍCH (Chỉ hiện cho Dispatcher KHU VỰC GIAO) *@
                @if (Model.Status == OrderStatus.InterAreaTransporting && currentDispatcherAreaId == Model.DeliveryAreaId)
                {
                    <div class="card shadow-sm border-info mb-3 bg-light">
                        <div class="card-body p-3 text-center">
                            <button onclick="updateOrderStatus(@Model.Id, '@OrderStatus.ArrivedDeliveryHub')" class="btn btn-info text-white fw-bold btn-sm rounded-pill">Xác nhận Nhập kho đích</button>
                        </div>
                    </div>
                }

                @* D. GÁN GIAO HÀNG (Chỉ hiện cho Dispatcher KHU VỰC GIAO) *@
                @if ((Model.Status == OrderStatus.ArrivedDeliveryHub || (Model.Status == OrderStatus.PickupSuccess && !isCrossArea) || Model.Status == OrderStatus.DeliveryFailed)
                                && currentDispatcherAreaId == Model.DeliveryAreaId)
                {
                    <div class="card shadow-sm border-success mb-3">
                        <div class="card-body p-3">
                            <h6 class="fw-bold text-success">Điều phối Giao hàng (Tại @Model.DeliveryArea.AreaName)</h6>
                            <form asp-action="Assign" method="post" class="assign-form d-flex gap-2 flex-wrap">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <div class="flex-grow-1">
                                    <select name="shipperId" class="form-select" required>
                                        <option value="">-- Chọn Shipper --</option>@foreach (var s in shippers) {
                                        <option value="@s.Id">@s.User!.FullName</option>
                                    }
                                </select>
                            </div>
                            <div class="w-100 text-end mt-2"><button class="btn btn-success rounded-pill px-4 fw-bold">Gán Giao</button></div>
                        </form>
                        @if (Model.Status == OrderStatus.DeliveryFailed)
                        {
                            <div class="mt-2 text-end"><button onclick="updateOrderStatus(@Model.Id, '@OrderStatus.Returning')" class="btn btn-secondary btn-sm rounded-pill">Chuyển hoàn trả</button></div>
                        }
                    </div>
                </div>
                                }
                                }
                                }

                @* --- SHIPPER CONTROL (Giữ nguyên logic) --- *@
                @if (User.IsInRole("Shipper") && Model.Shipper?.User?.UserName == currentUserName)
                {
                    <div class="card shadow-sm border-dark mb-3">
                        <div class="card-body p-3">
                            @if (showShipperCollectBtn)
                            {
                                <div class="alert alert-warning d-flex justify-content-between align-items-center mb-3 border-0 shadow-sm">
                                    <div><strong><i class="fa-solid fa-money-bill-wave me-2"></i> Thu tiền:</strong> @Model.TotalPrice.ToString("N0") đ</div>
                                    <button type="button" id="btn-confirm-cod" class="btn btn-warning text-dark fw-bold rounded-pill btn-sm px-3">Xác nhận đã thu tiền</button>
                                </div>
                            }
                            <h6 class="fw-bold mb-3"><i class="fa-solid fa-truck-fast me-2"></i> Cập nhật trạng thái</h6>
                            <form asp-action="UpdateStatus" method="post" id="shipper-update-form" class="d-flex gap-2 align-items-center">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <select name="status" class="form-select fw-bold text-dark">
                                    @if (Model.Status == OrderStatus.AssignedPickupShipper || Model.Status == OrderStatus.Picking)
                                    {
                                        <option value="@OrderStatus.Picking">Đang đi lấy</option>
                                        <option value="@OrderStatus.PickupSuccess">Lấy thành công</option>
                                        <option value="@OrderStatus.PickupFailed">Lấy thất bại</option>
                                    }
                                    else if (Model.Status == OrderStatus.AssignedDeliveryShipper || Model.Status == OrderStatus.Delivering)
                                    {
                                        <option value="@OrderStatus.Delivering">Đang giao hàng</option>
                                        <option value="@OrderStatus.Delivered">Giao thành công</option>
                                        <option value="@OrderStatus.DeliveryFailed">Giao thất bại</option>
                                    }
                                    else if (Model.Status == OrderStatus.Returning)
                                    {
                                        <option value="@OrderStatus.Returned">Đã hoàn trả xong</option>
                                        <option value="@OrderStatus.ReturnFailed">Trả hàng thất bại</option>
                                    }
                                </select>
                                <button type="button" class="btn btn-dark btn-sm rounded-pill px-3 btn-shipper-submit">Cập nhật</button>
                            </form>
                        </div>
                    </div>
                }
                                }

            </div>

            <div class="card-footer bg-light p-3 text-center rounded-bottom-4">
                <a id="backBtn" class="btn btn-outline-secondary rounded-pill px-4 fw-bold hover-top">
                    <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
                    var btn = document.getElementById('backBtn');
                    if (!btn) return;

                    // prefer history.back if referrer exists and is same-origin
                    try {
                        var ref = document.referrer;
                        if (ref) {
                            var refUrl = new URL(ref, window.location.href);
                            if (refUrl.origin === window.location.origin) {
                                btn.addEventListener('click', function (e) {
                                    e.preventDefault();
                                    history.back();
                                }, { once: true });
                                return;
                            }
                        }
                    } catch (e) {
                        // ignore and fall back to the href
                    }

                    // if no usable referrer, keep the fallback href (server computed)
                })();

        // JS Logic giữ nguyên
        function updateOrderStatus(orderId, status) {
            if(!confirm("Xác nhận cập nhật trạng thái?")) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("UpdateStatus", "Order")', { orderId: orderId, status: status, __RequestVerificationToken: token })
             .done(function(res) { if(res.success) { location.reload(); } else { alert(res.message); } })
             .fail(function() { alert("Lỗi kết nối."); });
        }

        $('#btn-confirm-cod').click(function() {
            if(!confirm("Xác nhận ĐÃ THU TIỀN?")) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("ConfirmCodCollection", "Order")', { orderId: '@Model.Id', __RequestVerificationToken: token })
             .done(function(res) { if(res.success) { alert("Thành công!"); location.reload(); } else alert(res.message); });
        });

        $('#btn-customer-cancel').click(function() {
            if(!confirm("Hủy đơn?")) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("Cancel", "Order")', { orderId: '@Model.Id', __RequestVerificationToken: token })
             .done(function(res) { if(res.success) { location.reload(); } else alert(res.message); });
        });

        $('.assign-form').on('submit', function(e) {
            e.preventDefault();
            $.post($(this).attr('action'), $(this).serialize())
             .done(function(res) { if(res.success) location.reload(); else alert(res.message); });
        });

        $('.btn-shipper-submit').click(function() {
            var form = $('#shipper-update-form');
            updateOrderStatus(form.find('input[name="orderId"]').val(), form.find('select').val());
        });
    </script>
}
