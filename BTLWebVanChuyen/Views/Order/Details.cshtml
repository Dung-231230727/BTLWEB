@section Scripts {
    <script>
        // 1. Hàm cập nhật trạng thái dùng chung cho các nút bấm
        function updateOrderStatus(orderId, status) {
            let actionName = "cập nhật trạng thái";
            if (status === '@OrderStatus.Picking') actionName = "BẮT ĐẦU ĐI LẤY";
            else if (status === '@OrderStatus.PickupSuccess') actionName = "XÁC NHẬN LẤY THÀNH CÔNG";
            else if (status === '@OrderStatus.Delivering') actionName = "BẮT ĐẦU ĐI GIAO";
            else if (status === '@OrderStatus.Delivered') actionName = "XÁC NHẬN GIAO THÀNH CÔNG";
            // Map tên cho các trạng thái hoàn trả mới
            else if (status === '@OrderStatus.ArrivedPickupTerminal') actionName = "XÁC NHẬN HÀNG ĐÃ VỀ KHO";
            else if (status === '@OrderStatus.ReturningToSender') actionName = "BẮT ĐẦU ĐI TRẢ KHÁCH";
            else if (status === '@OrderStatus.Returned') actionName = "XÁC NHẬN TRẢ HÀNG THÀNH CÔNG";

            if(!confirm(`Bạn chắc chắn muốn ${actionName}?`)) return;

            var token = $('input[name="__RequestVerificationToken"]').val();

            $.post('@Url.Action("UpdateStatus", "Order")', {
                orderId: orderId,
                status: status,
                __RequestVerificationToken: token
            })
            .done(function(res) {
                if(res.success) {
                    location.reload();
                } else {
                    alert("Lỗi: " + res.message);
                }
            })
            .fail(function() {
                alert("Lỗi kết nối đến máy chủ.");
            });
        }

        // 2. Xử lý nút xác nhận thu tiền COD
        $('#btn-confirm-cod').click(function() {
            if(!confirm("Xác nhận bạn ĐÃ THU TIỀN từ khách hàng? Hành động này không thể hoàn tác.")) return;

            var token = $('input[name="__RequestVerificationToken"]').val();

            $.post('@Url.Action("ConfirmCodCollection", "Order")', {
                orderId: '@Model.Id',
                __RequestVerificationToken: token
            })
            .done(function(res) {
                if(res.success) {
                    alert("Đã xác nhận thu tiền thành công!");
                    location.reload();
                } else {
                    alert(res.message);
                }
            });
        });

        // 3. Customer hủy đơn
        $('#btn-customer-cancel').click(function() {
            if(!confirm("Bạn có chắc chắn muốn hủy đơn hàng này không?")) return;
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("Cancel", "Order")', { orderId: '@Model.Id', __RequestVerificationToken: token })
             .done(function(res) { if(res.success) { location.reload(); } else alert(res.message); });
        });

        // 4. Form gán Shipper (Dispatcher)
        $('.assign-form').on('submit', function(e) {
            e.preventDefault();
            $.post($(this).attr('action'), $(this).serialize())
             .done(function(res) { if(res.success) location.reload(); else alert(res.message); });
        });

        // Hàm xử lý quay lại trang trước thông minh
        function goBack() {
            // Kiểm tra nếu có lịch sử duyệt web (document.referrer khác rỗng)
            if (document.referrer && document.referrer.indexOf(window.location.host) !== -1) {
                history.back();
            } else {
                // Trường hợp mở tab mới hoặc nhập trực tiếp URL -> Quay về trang chủ hoặc danh sách đơn
                // Bạn có thể đổi thành '@Url.Action("Index", "Order")' nếu muốn về danh sách đơn
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }
    </script>
