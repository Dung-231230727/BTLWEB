@{
    // Defensive check to avoid CS8602: Dereference of a possibly null reference.
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTLWebVanChuyen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTLWebVanChuyen.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BTLWebVanChuyen</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">Hi, @userName</span>
                            </li>

                            <!-- MENU CHO KHÁCH HÀNG -->
                            @if (User?.IsInRole("Customer") ?? false)
                            {
                                <li class="nav-item"><a class="nav-link" href="/Order/Create">Tạo đơn hàng</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Order/MyOrders">Đơn hàng của tôi</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Order/Tracking">Tra cứu đơn hàng</a></li>
                            }

                            <!-- MENU CHO ADMIN -->
                            @if (User?.IsInRole("Admin") ?? false)
                            {
                                <li class="nav-item"><a class="nav-link" href="/Employee">Quản lý nhân viên</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Customer">Quản lý khách hàng</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Area">Quản lý Khu vực</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Price">Quản lý cước phí</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Order">Quản lý đơn hàng</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Report/DailyReport">Báo cáo & Thống kê</a></li>
                            }

                            <!-- MENU CHO NHÂN VIÊN ĐIỀU PHỐI -->
                            @if (User?.IsInRole("Dispatcher") ?? false)
                            {
                                <li class="nav-item"><a class="nav-link" href="/Order">Quản lý đơn hàng</a></li>
                            }

                            <!-- MENU CHO NHÂN VIÊN GIAO HÀNG -->
                            @if (User?.IsInRole("Shipper") ?? false)
                            {
                                <li class="nav-item"><a class="nav-link" href="/Order">Đơn hàng được giao</a></li>
                            }

                            <!-- ĐĂNG XUẤT -->
                            <form asp-action="Logout" asp-controller="Auth" method="post">
                                <button class="btn btn-link nav-link">Đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/Order/Tracking">Tra cứu đơn hàng</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Auth/Login">Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Auth/Register">Đăng ký</a></li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BTLWebVanChuyen - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
