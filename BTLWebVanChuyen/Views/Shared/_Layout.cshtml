@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using System.Linq
@inject SignInManager<BTLWebVanChuyen.Models.ApplicationUser> SignInManager
@inject BTLWebVanChuyen.Data.ApplicationDbContext DbContext

@{
    // LOGIC GỐC: GIỮ NGUYÊN
    var isAuthenticated = SignInManager.IsSignedIn(User);
    var userName = User?.Identity?.Name ?? "";
    var title = ViewData["Title"]?.ToString() ?? "BTLWebVanChuyen";
    var unreadNotifications = 0;

    // Lấy số lượng thông báo chưa đọc cho người dùng đã đăng nhập
    if (isAuthenticated)
    {
        var userId = User!.FindFirstValue(ClaimTypes.NameIdentifier);
        if (!string.IsNullOrEmpty(userId))
        {
            unreadNotifications = DbContext.Notifications.Count(n => n.UserId == userId && !n.IsRead);
        }
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Dịch vụ Vận Chuyển</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Tùy chỉnh đè lên site.css để khớp với template FASTER */
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
            text-transform: uppercase;
            font-size: 0.9rem;
            padding: 15px 10px;
        }

        .topbar {
            background-color: #212529;
            color: #f8f9fa;
            font-size: 0.85rem;
        }
        /* Màu Dark của Template */

        .navbar-nav .dropdown-toggle::after {
            content: none !important; /* Xóa nội dung mũi tên */
            display: none !important;
        }

        /* Trạng thái ẩn/chuẩn bị hiện ra */
        .reveal-item {
            opacity: 0;
            transform: translateY(20px); /* Dịch chuyển từ dưới lên 20px */
            transition: opacity 0.8s ease-out, transform 0.8s ease-out; /* Chuyển đổi mượt mà */
            will-change: opacity, transform; /* Tăng hiệu năng */
        }

            /* Trạng thái đã hiện ra (khi class 'revealed' được thêm vào bằng JS) */
            .reveal-item.revealed {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>
    <div class="container-fluid topbar py-2 px-lg-5 d-none d-lg-block">
        <div class="row">
            <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center">
                    <small class="me-3"><i class="fa fa-phone-alt me-2"></i>+84 123 456 789</small>
                    <small class="me-3"><i class="fa fa-envelope me-2"></i>lienhe@vanchuyen.com</small>
                </div>
            </div>
            <div class="col-md-6 text-center text-lg-end">
                <div class="d-inline-flex align-items-center">
                    <a class="text-white px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                    <a class="text-white px-2" href="#"><i class="fab fa-twitter"></i></a>
                    <a class="text-white px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a class="text-white px-2" href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 px-lg-5 sticky-top">
            <div class="container-fluid">
                @* LOGO *@
                <a class="navbar-brand fs-2 text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-truck-fast me-2"></i>FASTER<span class="text-dark">SHIP</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    @* LEFT SIDE MENU - Menu Chính *@
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 py-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark active" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>

                        @* LOGIC GỐC: KHÔNG THAY ĐỔI *@
                        @if (User!.IsInRole("Admin") || User.IsInRole("Dispatcher"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Quản lý Đơn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ShipmentBatch" asp-action="Index">Quản lý lô</a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">Admin</a>
                                    <ul class="dropdown-menu shadow-sm border-0 m-0">
                                        <li><a class="dropdown-item" asp-controller="Employee" asp-action="Index">Nhân viên</a></li>
                                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">Khách hàng</a></li>
                                        <li><a class="dropdown-item" asp-controller="Area" asp-action="Index">Khu vực</a></li>
                                        <li><a class="dropdown-item" asp-controller="Warehouse" asp-action="Index">Kho hàng</a></li>
                                        <li><a class="dropdown-item" asp-controller="Price" asp-action="Index">Bảng giá</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="reportDropdown" role="button" data-bs-toggle="dropdown">Báo cáo</a>
                                    <ul class="dropdown-menu shadow-sm border-0 m-0">
                                        <li><a class="dropdown-item" asp-controller="Report" asp-action="DailyReport">Theo ngày</a></li>
                                        <li><a class="dropdown-item" asp-controller="Report" asp-action="AreaReport">Theo khu vực</a></li>
                                        <li><a class="dropdown-item" asp-controller="Report" asp-action="SummaryReport">Tổng hợp</a></li>
                                    </ul>
                                </li>
                            }
                        }

                        @* Khách hàng *@
                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Order" asp-action="Create">Tạo đơn</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Order" asp-action="MyOrders">Đơn của tôi</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Price" asp-action="Index">Bảng giá</a></li>
                        }

                        @* Shipper *@
                        @if (User.IsInRole("Shipper"))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Giao hàng</a></li>
                        }

                        @* Menu chung *@
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Order" asp-action="Tracking">Tra cứu</a></li>
                    </ul>

                    @* RIGHT SIDE - Auth Button *@
                    <div class="ms-lg-4 d-flex align-items-center gap-3">
                        @if (isAuthenticated)
                        {
                            @* Icon thông báo *@
                            <a asp-controller="Notification" asp-action="Index" class="btn btn-outline-secondary position-relative me-2">
                                <i class="fa-solid fa-bell"></i>
                                @if (unreadNotifications > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @unreadNotifications
                                    </span>
                                }
                            </a>

                            <div class="dropdown">
                                <button class="btn btn-primary py-2 px-4 d-flex align-items-center dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-user me-2"></i> @userName
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                    <li>
                                        <form asp-action="Logout" asp-controller="Auth" method="post">
                                            <button type="submit" class="dropdown-item text-danger"><i class="fa-solid fa-power-off me-2"></i> Đăng xuất</button>
                                        </form>
                                        @if (User.IsInRole("Customer"))
                                        {
                                            <a class="dropdown-item text-dark" asp-controller="Customer" asp-action="Info">
                                                <i class="fa-solid fa-user me-2"></i> Tài khoản
                                            </a>
                                        }
                                        <a class="dropdown-item text-dark" asp-controller="Wallet" asp-action="Index">
                                            <i class="fa-solid fa-wallet me-2 text-warning"></i> Ví tiền
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-primary py-2 px-4 d-none d-lg-block" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                            @* Hiển thị trên mobile *@
                            <div class="d-lg-none mt-2">
                                <a class="btn btn-outline-primary w-100 mb-2" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                                <a class="btn btn-primary w-100" asp-controller="Auth" asp-action="Register">Đăng ký</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        @* Dùng container-fluid p-0 để các section con (banner) có thể full-width *@
        <main role="main">
            @* Logic thông báo giữ nguyên *@
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="container mt-4 reveal-item">
                    <div class="alert alert-info shadow-sm border-0" role="alert"><i class="fa-solid fa-bell me-2"></i> @ViewBag.Message</div>
                </div>
            }

            @* Nội dung chính *@
            <div class="container py-5 reveal-item">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="bg-dark text-white pt-5 mt-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-4 col-md-6">
                    <h3 class="text-primary mb-4">FASTER<span class="text-white">SHIP</span></h3>
                    <p class="text-white-50">Dịch vụ vận chuyển hàng hóa nhanh chóng, an toàn và tiết kiệm chi phí hàng đầu Việt Nam.</p>
                    <div class="d-flex pt-2">
                        <a class="btn btn-outline-light btn-social me-2 rounded-circle" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-outline-light btn-social me-2 rounded-circle" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-outline-light btn-social me-2 rounded-circle" href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-white mb-4">Liên kết nhanh</h4>
                    <div class="d-flex flex-column justify-content-start">
                        <a class="text-white-50 mb-2 text-decoration-none" asp-controller="Home" asp-action="Index"><i class="fa fa-angle-right me-2"></i>Trang chủ</a>
                        <a class="text-white-50 mb-2 text-decoration-none" asp-controller="Order" asp-action="Tracking"><i class="fa fa-angle-right me-2"></i>Tra cứu đơn</a>
                        <a class="text-white-50 mb-2 text-decoration-none" asp-controller="Home" asp-action="Privacy"><i class="fa fa-angle-right me-2"></i>Chính sách bảo mật</a>
                        <a class="text-white-50 text-decoration-none" href="#"><i class="fa fa-angle-right me-2"></i>Liên hệ</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-white mb-4">Liên hệ</h4>
                    <p class="text-white-50"><i class="fa fa-map-marker-alt me-3 text-primary"></i>123 Đường ABC, Hà Nội</p>
                    <p class="text-white-50"><i class="fa fa-phone-alt me-3 text-primary"></i>+84 123 456 789</p>
                    <p class="text-white-50"><i class="fa fa-envelope me-3 text-primary"></i>info@example.com</p>
                </div>
            </div>
        </div>
        <div class="container border-top border-secondary py-4">
            <div class="text-center text-white-50">
                &copy; 2025 <a class="text-primary text-decoration-none" href="#">BTLWebVanChuyen</a>. All Rights Reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>