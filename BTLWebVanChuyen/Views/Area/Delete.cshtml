@model BTLWebVanChuyen.Models.Area
@{
    ViewData["Title"] = "Xóa khu vực";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fa-solid fa-trash-can fa-3x text-danger"></i>
            </div>
            <h3 class="fw-bold text-dark">Xóa Khu Vực?</h3>
            <p class="text-muted px-4">Bạn có chắc chắn muốn xóa khu vực này? Nếu khu vực đang có Kho hàng hoặc Nhân viên, hành động này sẽ bị từ chối.</p>
        </div>

        <div class="card shadow-lg border-0 rounded-4 mb-4">
            <div class="card-body p-4 text-center">
                <h5 class="text-secondary text-uppercase small fw-bold mb-2">Tên khu vực cần xóa</h5>
                <h2 class="text-primary fw-bold mb-0">@Model.AreaName</h2>

                @* Hiển thị cảnh báo nếu có kho *@
                @if (Model.Warehouses != null && Model.Warehouses.Any())
                {
                    <div class="alert alert-warning mt-3 mb-0 small">
                        <i class="fa-solid fa-triangle-exclamation me-1"></i> Cảnh báo: Khu vực này đang chứa <strong>@Model.Warehouses.Count</strong> kho hàng.
                    </div>
                }
            </div>
        </div>

        <div class="d-flex gap-3">
            <form asp-action="Delete" method="post" class="flex-grow-1">
                <input type="hidden" asp-for="AreaId" />
                <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm hover-top">
                    <i class="fa-solid fa-check me-2"></i>Xác nhận Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light flex-grow-1 py-3 fw-bold rounded-pill text-secondary text-center text-decoration-none">Hủy bỏ</a>
        </div>
    </div>
</div>