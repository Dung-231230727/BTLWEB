@model BTLWebVanChuyen.Models.Area
@{
    ViewData["Title"] = "Xóa khu vực";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa khu vực này?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Area Name</dt>
        <dd class="col-sm-10">@Model.AreaName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="AreaId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
