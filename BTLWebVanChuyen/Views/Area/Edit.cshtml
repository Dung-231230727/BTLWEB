@model BTLWebVanChuyen.Models.Area
@{
    ViewData["Title"] = "Chỉnh sửa khu vực";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-pen-to-square fa-2x text-warning"></i>
                </div>
                <h3 class="fw-bold text-dark">@ViewData["Title"]</h3>
                <p class="text-muted">Cập nhật thông tin khu vực</p>
            </div>

            <div class="card-body p-4 pt-2">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>
                    <input type="hidden" asp-for="AreaId" />

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Tên khu vực</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-signature text-muted"></i></span>
                            <input asp-for="AreaName" class="form-control bg-light border-start-0" style="height: 50px;" />
                        </div>
                        <span asp-validation-for="AreaName" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning py-3 rounded-pill fw-bold shadow-sm hover-top">
                            <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-light py-3 rounded-pill fw-bold text-secondary">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}