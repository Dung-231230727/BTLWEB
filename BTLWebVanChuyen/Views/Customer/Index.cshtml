@model IEnumerable<BTLWebVanChuyen.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Quản lý</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-users me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
</div>

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-4 ps-4 text-secondary text-uppercase font-weight-bold small border-0">Tên đầy đủ</th>
                        <th class="py-4 text-secondary text-uppercase font-weight-bold small border-0">Email</th>
                        <th class="py-4 text-secondary text-uppercase font-weight-bold small border-0">Địa chỉ</th>
                        <th class="py-4 pe-4 text-center text-secondary text-uppercase font-weight-bold small border-0" style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-user text-primary"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@(customer.User?.FullName)</span>
                                </div>
                            </td>
                            <td class="py-3 text-muted">@(customer.User?.Email)</td>
                            <td class="py-3 text-muted"><i class="fa-solid fa-location-dot me-2 text-secondary"></i>@customer.Address</td>
                            <td class="pe-4 py-3 text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-light text-warning btn-sm" asp-action="Edit" asp-route-id="@customer.Id" title="Sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn btn-light text-danger btn-sm" asp-action="Delete" asp-route-id="@customer.Id" title="Xóa">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Nếu không có dữ liệu *@
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-users-slash fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có khách hàng nào trong hệ thống.</p>
            </div>
        }
    </div>
</div>