@model IEnumerable<BTLWebVanChuyen.Models.Customer>

@{
    ViewData["Title"] = "Quản lý Khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Quản lý</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-users me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
    @* Nút thêm mới (nếu cần, thường khách hàng tự đăng ký) *@
    @* <a class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-top" asp-action="Create">
        <i class="fa-solid fa-user-plus me-2"></i>Thêm khách hàng
    </a> *@
</div>

@* === FORM TÌM KIẾM === *@
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-body bg-light rounded-4 p-4">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0" placeholder="Tìm theo Tên, Email hoặc SĐT..." value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold"><i class="fa-solid fa-filter me-1"></i> Lọc</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3" title="Xóa bộ lọc"><i class="fa-solid fa-rotate-right"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success rounded-4 shadow-sm mb-4"><i class="fa-solid fa-check-circle me-2"></i> @TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger rounded-4 shadow-sm mb-4"><i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Error"]</div>
}

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Họ và Tên</th>
                        <th>Thông tin liên hệ</th>
                        <th>Địa chỉ</th>
                        <th class="text-center" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-user text-success"></i>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-dark d-block">@item.User?.FullName</span>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-dark"><i class="fa-solid fa-envelope me-2 text-muted small"></i>@item.User?.Email</span>
                                    <span class="text-muted small mt-1"><i class="fa-solid fa-phone me-2 text-muted small"></i>@(item.User?.PhoneNumber ?? "---")</span>
                                </div>
                            </td>
                            <td class="text-muted"><i class="fa-solid fa-location-dot me-1 text-danger"></i> @item.Address</td>
                            <td class="pe-4 py-3 text-center">
                                <div class="btn-group shadow-sm">
                                    @* Admin có thể sửa thông tin khách hàng *@
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning" title="Sửa"><i class="fa-solid fa-pen-to-squarefa-pen"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Xóa"><i class="fa-solid fa-trash-can"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-users-slash fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có khách hàng nào trong hệ thống.</p>
            </div>
        }
    </div>
</div>