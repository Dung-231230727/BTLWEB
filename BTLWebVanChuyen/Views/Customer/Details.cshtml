@model BTLWebVanChuyen.Models.Customer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="fa-solid fa-user fa-3x text-success"></i>
                </div>
                <h3 class="fw-bold text-dark">@Model.User?.FullName</h3>
                <p class="text-muted">Thông tin chi tiết khách hàng</p>
            </div>

            <div class="card-body p-4">
                <div class="list-group list-group-flush rounded-4 shadow-sm">
                    <div class="list-group-item p-3 border-0 d-flex justify-content-between align-items-center bg-light mb-1 rounded">
                        <span class="text-muted small text-uppercase fw-bold"><i class="fa-solid fa-envelope me-2"></i> Email</span>
                        <span class="fw-bold text-dark">@Model.User?.Email</span>
                    </div>
                    <div class="list-group-item p-3 border-0 d-flex justify-content-between align-items-center bg-light mb-1 rounded">
                        <span class="text-muted small text-uppercase fw-bold"><i class="fa-solid fa-phone me-2"></i> Số điện thoại</span>
                        <span class="fw-bold text-dark">@(Model.User?.PhoneNumber ?? "Chưa cập nhật")</span>
                    </div>
                    <div class="list-group-item p-3 border-0 bg-light rounded">
                        <span class="text-muted small text-uppercase fw-bold d-block mb-1"><i class="fa-solid fa-map-location-dot me-2"></i> Địa chỉ</span>
                        <span class="fw-bold text-dark">@Model.Address</span>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning flex-grow-1 rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-light flex-grow-1 rounded-pill fw-bold text-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>