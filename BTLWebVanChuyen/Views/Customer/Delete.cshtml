@model BTLWebVanChuyen.Models.Customer
@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fa-solid fa-user-xmark fa-3x text-danger"></i>
            </div>
            <h3 class="fw-bold text-dark">Xóa Tài Khoản?</h3>
            <p class="text-muted px-4">Hành động này sẽ xóa toàn bộ thông tin và tài khoản đăng nhập của khách hàng này. Không thể hoàn tác.</p>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
        </div>

        <div class="card shadow-lg border-0 rounded-4 mb-4">
            <div class="card-body p-4">
                <h5 class="text-center text-uppercase text-secondary fw-bold mb-4 border-bottom pb-3">Thông tin khách hàng</h5>

                <div class="mb-3 text-center">
                    <h4 class="fw-bold text-dark mb-1">@Model.User?.FullName</h4>
                    <p class="text-muted mb-0">@Model.User?.Email</p>
                </div>

                <div class="bg-light p-3 rounded-3">
                    <small class="text-uppercase text-secondary fw-bold d-block mb-1">Địa chỉ:</small>
                    <span class="text-dark"><i class="fa-solid fa-location-dot me-1 text-danger"></i> @Model.Address</span>
                </div>
            </div>
        </div>

        <div class="d-flex gap-3">
            <form asp-action="Delete" method="post" class="flex-grow-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm hover-top">
                    <i class="fa-solid fa-check me-2"></i>Xác nhận Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light flex-grow-1 py-3 fw-bold rounded-pill text-secondary text-center text-decoration-none">Hủy bỏ</a>
        </div>
    </div>
</div>