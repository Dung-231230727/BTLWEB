@model IEnumerable<BTLWebVanChuyen.Models.Employee>
@using BTLWebVanChuyen.Utility
@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm nhân viên mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Khu vực</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.User!.FullName</td>
                <td>@emp.User.Email</td>
                <td>@emp.Role.GetDisplayName()</td>
                <td>@(emp.Area?.AreaName ?? "Chưa gán")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@emp.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@emp.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
