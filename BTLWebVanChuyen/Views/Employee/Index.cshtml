@model IEnumerable<BTLWebVanChuyen.Models.Employee>
@{
    ViewData["Title"] = "Quản lý Nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Quản lý</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-users-gear me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-top">
        <i class="fa-solid fa-user-plus me-2"></i>Thêm nhân viên
    </a>
</div>

@* === FORM TÌM KIẾM & LỌC === *@
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-body bg-light rounded-4 p-4">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            @* Tìm kiếm *@
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0" placeholder="Tìm theo Tên hoặc Email..." value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            @* Lọc Khu vực *@
            <div class="col-md-3">
                <select name="filterAreaId" class="form-select" asp-items="ViewBag.AreaId">
                    <option value="">-- Tất cả Khu vực --</option>
                </select>
            </div>
            @* Lọc Vai trò *@
            <div class="col-md-2">
                <select name="filterRole" class="form-select">
                    <option value="">-- Tất cả Vai trò --</option>
                    <option value="1">Dispatcher</option>
                    <option value="2">Shipper</option>
                </select>
            </div>
            @* Nút Lọc *@
            <div class="col-md-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold"><i class="fa-solid fa-filter"></i> Lọc</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3" title="Xóa bộ lọc"><i class="fa-solid fa-rotate-right"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success rounded-4 shadow-sm mb-4"><i class="fa-solid fa-check-circle me-2"></i> @TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger rounded-4 shadow-sm mb-4"><i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Error"]</div>
}

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Họ tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Khu vực quản lý</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-id-badge text-primary"></i>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-dark d-block">@item.User?.FullName</span>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">@item.User?.Email</td>
                            <td>
                                @if (item.Role == BTLWebVanChuyen.Models.EmployeeRole.Dispatcher)
                                {
                                    <span class="badge bg-purple text-white rounded-pill px-3" style="background-color: #6f42c1"><i class="fa-solid fa-headset me-1"></i> Dispatcher</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3"><i class="fa-solid fa-truck-fast me-1"></i> Shipper</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-dark border border-info rounded-pill px-3">
                                    <i class="fa-solid fa-map-pin me-1"></i>@(item.Area?.AreaName ?? "Chưa gán")
                                </span>
                            </td>
                            <td class="pe-4 text-center">
                                <div class="btn-group shadow-sm">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning" title="Sửa"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Xóa"><i class="fa-solid fa-trash-can"></i></a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-user-slash fa-3x text-muted mb-3"></i>
                <p class="text-muted">Không tìm thấy nhân viên nào.</p>
            </div>
        }
    </div>
</div>