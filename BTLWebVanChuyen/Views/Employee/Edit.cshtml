@model BTLWebVanChuyen.Models.Employee
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-user-pen fa-2x text-warning"></i>
                </div>
                <h3 class="fw-bold text-dark">@ViewData["Title"]</h3>
                <p class="text-muted">Cập nhật thông tin hồ sơ nhân viên</p>
            </div>

            <div class="card-body p-4 pt-2">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Họ và Tên</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-muted"></i></span>
                                <input asp-for="User.FullName" class="form-control bg-light border-start-0" />
                            </div>
                            <span asp-validation-for="User.FullName" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                <input asp-for="User.Email" class="form-control bg-light border-start-0" />
                            </div>
                            <span asp-validation-for="User.Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Vai trò</label>
                            <select asp-for="Role" class="form-select bg-light" asp-items="@(new SelectList(
                                                                                                                                                                                                                                                                                    new[] {
                                                                                                                                                                                                                                                                                        new { Value = "Dispatcher", Text = "Nhân viên điều phối" },
                                                                                                                                                                                                                                                                                        new { Value = "Shipper", Text = "Nhân viên giao hàng" }
                                                                                                                                                                                                                                                                                    }, "Value", "Text", Model.Role.ToString()
                                                                                                                                                                                                                                                                                ))">
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary small text-uppercase">Khu vực quản lý</label>
                            <select asp-for="AreaId" class="form-select bg-light" asp-items="@(ViewData["Areas"] as SelectList)">
                                <option value="">-- Chọn khu vực --</option>
                            </select>
                            <span asp-validation-for="AreaId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary py-3 rounded-pill fw-bold shadow-sm hover-top">
                            <i class="fa-solid fa-save me-2"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-light py-3 rounded-pill fw-bold text-secondary">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}