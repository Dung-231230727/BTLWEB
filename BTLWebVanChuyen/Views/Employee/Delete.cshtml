@model BTLWebVanChuyen.Models.Employee
@using BTLWebVanChuyen.Utility
@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-4">
            <div class="bg-danger bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fa-solid fa-user-xmark fa-3x text-danger"></i>
            </div>
            <h3 class="fw-bold text-dark">Xóa Nhân Viên?</h3>
            <p class="text-muted px-4">Bạn có chắc chắn muốn xóa nhân viên này khỏi hệ thống? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="card shadow-lg border-0 rounded-4 mb-4">
            <div class="card-body p-4">
                <h5 class="text-primary fw-bold border-bottom pb-3 mb-3 text-center">Hồ sơ nhân viên</h5>
                <dl class="row g-2">
                    <dt class="col-sm-4 text-secondary small text-uppercase">Họ tên</dt>
                    <dd class="col-sm-8 fw-bold text-dark">@Model.User!.FullName</dd>

                    <dt class="col-sm-4 text-secondary small text-uppercase">Email</dt>
                    <dd class="col-sm-8 text-dark">@Model.User.Email</dd>

                    <dt class="col-sm-4 text-secondary small text-uppercase">Vai trò</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary rounded-pill">@Model.Role</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="d-flex gap-3">
            <form asp-action="DeleteConfirmed" method="post" class="flex-grow-1">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100 py-3 fw-bold rounded-pill shadow-sm hover-top">
                    <i class="fa-solid fa-trash-can me-2"></i>Xác nhận Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light w-100 py-3 fw-bold rounded-pill shadow-sm text-secondary hover-top">
                <i class="fa-solid fa-xmark me-2"></i>Hủy bỏ
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-top:hover {
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
}