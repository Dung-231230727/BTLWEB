@model BTLWebVanChuyen.Models.Employee
@{
    ViewData["Title"] = "Thêm nhân viên mới";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                    <i class="fa-solid fa-user-plus fa-2x text-primary"></i>
                </div>
                <h3 class="fw-bold text-dark">@ViewData["Title"]</h3>
                <p class="text-muted">Tạo tài khoản và phân quyền nhân viên</p>
            </div>

            <div class="card-body p-4 pt-2">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <h5 class="text-primary fw-bold mb-3 border-bottom pb-2">Thông tin cá nhân</h5>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase text-secondary">Họ và Tên</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user text-muted"></i></span>
                            <input name="User.FullName" class="form-control bg-light border-start-0" placeholder="Nhập họ tên đầy đủ" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase text-secondary">Email (Tài khoản đăng nhập)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                            <input name="User.Email" type="email" class="form-control bg-light border-start-0" placeholder="email@example.com" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-uppercase text-secondary">Mật khẩu khởi tạo</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-lock text-muted"></i></span>
                            <input name="User.PasswordHash" type="password" class="form-control bg-light border-start-0" required />
                        </div>
                    </div>

                    <h5 class="text-primary fw-bold mb-3 border-bottom pb-2">Phân quyền & Khu vực</h5>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-uppercase text-secondary">Vai trò</label>
                            <select name="Role" class="form-select bg-light" style="height: 50px;">
                                <option value="Dispatcher">Nhân viên điều phối</option>
                                <option value="Shipper">Nhân viên giao hàng</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-uppercase text-secondary">Khu vực quản lý</label>
                            <select asp-for="AreaId" class="form-select bg-light" style="height: 50px;" asp-items="ViewBag.Areas">
                                <option value="">-- Chọn khu vực --</option>
                            </select>
                            <span asp-validation-for="AreaId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary py-3 rounded-pill fw-bold shadow-sm hover-top">
                            <i class="fa-solid fa-check me-2"></i>Hoàn tất thêm mới
                        </button>
                        <a asp-action="Index" class="btn btn-light py-3 rounded-pill fw-bold text-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}