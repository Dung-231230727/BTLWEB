@model List<BTLWebVanChuyen.Models.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Báo cáo theo khu vực";
}

<div class="mb-4 mt-3">
    <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Thống kê</h6>
    <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-map-location me-2 text-primary"></i> @ViewData["Title"]</h2>
</div>

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-success text-white">
                    <tr>
                        <th class="py-3 ps-4 border-0">Khu vực</th>
                        <th class="py-3 border-0 text-center">Tổng đơn</th>
                        <th class="py-3 border-0 text-center">Thành công</th>
                        <th class="py-3 border-0 text-center">Thất bại/Hủy</th>
                        <th class="py-3 pe-4 border-0 text-end">Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                        <i class="fa-solid fa-map-pin text-success"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.AreaName</span>
                                </div>
                            </td>
                            <td class="text-center fw-bold">@item.TotalOrders</td>
                            <td class="text-center text-success fw-bold">@item.DeliveredOrders</td>
                            <td class="text-center text-danger fw-bold">@item.FailedOrders</td>
                            <td class="pe-4 text-end fw-bold text-warning">@item.TotalRevenue.ToString("N0") ₫</td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-map-location-dot fa-2x mb-2"></i><br>Chưa có dữ liệu báo cáo.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>