@model List<BTLWebVanChuyen.Models.ViewModels.ReportViewModel>
@{
    ViewData["Title"] = "Báo cáo theo ngày";
}

<div class="mb-4 mt-3">
    <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Thống kê</h6>
    <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-calendar-day me-2 text-primary"></i> @ViewData["Title"]</h2>
</div>

<div class="card shadow-sm border-0 rounded-4 mb-4 bg-light">
    <div class="card-body p-4">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary small text-uppercase">Từ ngày</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar text-muted"></i></span>
                    <input type="date" name="fromDate" class="form-control border-0" value="@ViewBag.FromDate" />
                </div>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary small text-uppercase">Đến ngày</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-0"><i class="fa-solid fa-calendar text-muted"></i></span>
                    <input type="date" name="toDate" class="form-control border-0" value="@ViewBag.ToDate" />
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100 fw-bold py-2 rounded-3 shadow-sm">
                    <i class="fa-solid fa-filter me-2"></i>Lọc dữ liệu
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3 ps-4 border-0">Ngày</th>
                        <th class="py-3 border-0 text-center">Tổng đơn</th>
                        <th class="py-3 border-0 text-center">Thành công</th>
                        <th class="py-3 border-0 text-center">Thất bại/Hủy</th>
                        <th class="py-3 pe-4 border-0 text-end">Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3 fw-bold text-primary">@(item.ReportDate.HasValue? item.ReportDate.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td class="text-center fw-bold">@item.TotalOrders</td>
                            <td class="text-center text-success fw-bold">@item.DeliveredOrders</td>
                            <td class="text-center text-danger fw-bold">@item.FailedOrders</td>
                            <td class="pe-4 text-end fw-bold text-warning">@item.TotalRevenue.ToString("N0") ₫</td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-chart-simple fa-2x mb-2"></i><br>Không có dữ liệu cho khoảng thời gian này.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>