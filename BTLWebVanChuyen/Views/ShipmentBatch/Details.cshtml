@model BTLWebVanChuyen.Models.ShipmentBatch
@using BTLWebVanChuyen.Models
@using BTLWebVanChuyen.Utility
@{
    ViewData["Title"] = "Chi tiết Lô hàng";
    int currentAreaId = ViewBag.CurrentAreaId;
    bool canStart = Model.Status == ShipmentBatchStatus.Created && Model.OriginWarehouse!.AreaId == currentAreaId;
    bool canComplete = Model.Status == ShipmentBatchStatus.InTransit && Model.DestinationWarehouse!.AreaId == currentAreaId;
}

<div class="row justify-content-center mt-4">
    <div class="col-md-11 col-lg-10">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

            @* HEADER *@
            <div class="card-header bg-primary text-white p-4 d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0 fw-bold"><i class="fa-solid fa-box-archive me-2"></i> @ViewData["Title"]</h4>
                    <small class="opacity-75">Mã lô: @Model.BatchCode</small>
                </div>
                <div>
                    @if (Model.Status == ShipmentBatchStatus.Created)
                    {
                        <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill shadow-sm">Đang gom hàng</span>
                        ;
                    }
                    else if (Model.Status == ShipmentBatchStatus.InTransit)
                    {

                        <span class="badge bg-white text-primary fs-6 px-3 py-2 rounded-pill shadow-sm"><i class="fa-solid fa-truck-fast me-2"></i>Đang vận chuyển</span>
                        ;
                    }
                    else
                    {

                        <span class="badge bg-success fs-6 px-3 py-2 rounded-pill shadow-sm">Đã nhập kho đích</span>
                        ;
                    }
                </div>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    @* CỘT TRÁI: THÔNG TIN *@
                    <div class="col-lg-4">
                        <h6 class="text-uppercase text-primary fw-bold mb-3 border-bottom pb-2">Hành trình & Xe</h6>

                        <div class="timeline-steps position-relative ps-3 border-start border-2 border-primary border-opacity-25 ms-2">
                            <div class="mb-4 position-relative">
                                <span class="position-absolute top-0 start-0 translate-middle bg-white text-primary border border-2 border-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; margin-left: -1px;"><i class="fa-solid fa-warehouse small"></i></span>
                                <div class="ps-4">
                                    <small class="text-muted text-uppercase">Kho Xuất phát</small>
                                    <h6 class="fw-bold mb-0">@Model.OriginWarehouse!.Name</h6>
                                    <small class="text-muted">@Model.OriginWarehouse.Area!.AreaName</small>
                                </div>
                            </div>
                            <div class="position-relative">
                                <span class="position-absolute top-0 start-0 translate-middle bg-white text-danger border border-2 border-danger rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px; margin-left: -1px;"><i class="fa-solid fa-location-dot small"></i></span>
                                <div class="ps-4">
                                    <small class="text-muted text-uppercase">Kho Đích đến</small>
                                    <h6 class="fw-bold mb-0">@Model.DestinationWarehouse!.Name</h6>
                                    <small class="text-muted">@Model.DestinationWarehouse.Area!.AreaName</small>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <h6 class="text-uppercase text-primary fw-bold mb-3">Tài xế phụ trách</h6>
                        <div class="bg-light p-3 rounded-3 d-flex align-items-center">
                            @if (Model.Shipper != null)
                            {
                                <div class="bg-white p-2 rounded-circle shadow-sm me-3 text-primary"><i class="fa-solid fa-user-tie fa-lg"></i></div>
                                <div>
                                    <div class="fw-bold">@Model.Shipper.User!.FullName</div>
                                    <small class="text-muted">Mã NV: @Model.Shipper.Id</small>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">Chưa phân công tài xế</span>
                            }
                        </div>

                        @* BUTTONS HÀNH ĐỘNG *@
                        <div class="mt-4 d-grid gap-2">
                            @if (canComplete)
                            {
                                <form asp-action="CompleteTransport" method="post" onsubmit="return confirm('Xác nhận xe đã đến và nhập kho an toàn?');">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button class="btn btn-success w-100 py-2 fw-bold rounded-pill shadow hover-top">
                                        <i class="fa-solid fa-check-circle me-2"></i>XÁC NHẬN NHẬP KHO
                                    </button>
                                </form>
                            }
                            @if (canStart) // Tức là Status == Created và bạn đang ở kho xuất
                            {
                                <form asp-action="StartTransport" method="post" onsubmit="return confirm('Xe đã sẵn sàng rời kho?');" class="mb-2">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button class="btn btn-primary w-100 py-2 fw-bold rounded-pill shadow-sm">
                                        <i class="fa-solid fa-play me-2"></i>BẮT ĐẦU VẬN CHUYỂN
                                    </button>
                                </form>

                                @* [MỚI] Nút thêm đơn *@
                                <a asp-action="AddOrders" asp-route-batchId="@Model.Id" class="btn btn-warning w-100 py-2 fw-bold rounded-pill shadow-sm">
                                    <i class="fa-solid fa-plus me-2"></i>Thêm đơn vào lô
                                </a>
                            }
                        </div>
                    </div>

                    @* CỘT PHẢI: DANH SÁCH ĐƠN *@
                    <div class="col-lg-8">
                        <h6 class="text-uppercase text-primary fw-bold mb-3 border-bottom pb-2 d-flex justify-content-between">
                            <span>Danh sách đơn hàng</span>
                            <span class="badge bg-primary rounded-pill">@Model.Orders?.Count() đơn</span>
                        </h6>

                        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                            <table class="table table-hover align-middle mb-0 small">
                                <thead class="bg-light sticky-top">
                                    <tr>
                                        <th class="ps-3 py-2">Mã vận đơn</th>
                                        <th>Người gửi</th>
                                        <th>Người nhận</th>
                                        <th>Cước phí</th>
                                        <th class="text-end pe-3"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders!)
                                    {
                                        bool isReturn = order.Status == OrderStatus.Returning || order.Status == OrderStatus.ArrivedPickupTerminal;
                                        <tr>
                                            <td class="ps-3">
                                                <div class="fw-bold text-primary">@order.TrackingCode</div>
                                                @if (isReturn)
                                                {
                                                    <span class="badge bg-warning text-dark border border-warning" style="font-size: 10px;">TRẢ VỀ KHO XUẤT</span>
                                                }
                                            </td>
                                            <td>@order.Customer?.User?.FullName</td>
                                            <td>
                                                <div class="fw-bold">@order.ReceiverName</div>
                                                <small class="text-muted">@order.DeliveryAddress</small>
                                            </td>
                                            <td class="fw-bold text-success">@order.TotalPrice.ToString("N0") đ</td>
                                            <td class="text-end pe-3">
                                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-light border btn-sm rounded-pill px-3" target="_blank">
                                                    Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @* LOG NHẬT KÝ LÔ *@
                        <div class="mt-4">
                            <h6 class="text-uppercase text-success fw-bold mb-3 border-bottom pb-2">Nhật ký trạng thái</h6>
                            <div class="bg-light rounded-3 p-3" style="max-height: 200px; overflow-y: auto;">
                                @if (Model.BatchLogs != null)
                                {
                                    foreach (var log in Model.BatchLogs.OrderByDescending(l => l.Time))
                                    {
                                        <div class="d-flex border-bottom border-white mb-2 pb-2">
                                            <div class="me-3 text-center" style="width: 80px;">
                                                <small class="d-block fw-bold text-dark">@log.Time.ToString("HH:mm")</small>
                                                <small class="text-muted" style="font-size: 10px;">@log.Time.ToString("dd/MM")</small>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@log.Status.GetDisplayName()</div>
                                                <small class="text-muted">@log.Note <span class="fst-italic ms-1">(@log.UpdatedBy)</span></small>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light p-3 text-center rounded-bottom-4">
                <a href="javascript:void(0);" onclick="history.back()" class="btn btn-outline-secondary rounded-pill px-4 fw-bold hover-top">
                    <i class="fa-solid fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>