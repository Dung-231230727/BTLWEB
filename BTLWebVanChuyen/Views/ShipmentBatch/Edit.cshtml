@model BTLWebVanChuyen.Models.ShipmentBatch
@using BTLWebVanChuyen.Models

@{
    ViewData["Title"] = "Chỉnh sửa Lô hàng";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-warning text-dark p-4 rounded-top-4 text-center">
                <h3 class="mb-0 fw-bold"><i class="fa-solid fa-pen-to-square me-2"></i> @ViewData["Title"]</h3>
                <p class="mb-0 opacity-75">@Model.BatchCode</p>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Kho Xuất Phát (Cố định)</label>
                        <input type="text" class="form-control bg-light" value="@Model.OriginWarehouse?.Name" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Kho Đích Đến</label>
                        <select asp-for="DestinationWarehouseId" class="form-select form-select-lg"
                                asp-items="@(new SelectList(ViewBag.DestWarehouses, "Id", "Name", Model.DestinationWarehouseId))">
                        </select>
                        <span asp-validation-for="DestinationWarehouseId" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary small text-uppercase">Tài xế / Xe tải</label>
                        <select asp-for="ShipperId" class="form-select"
                                asp-items="@(new SelectList(ViewBag.Shippers, "Id", "User.FullName", Model.ShipperId))">
                            <option value="">-- Chưa chỉ định --</option>
                        </select>
                        <span asp-validation-for="ShipperId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4 fw-bold me-md-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-warning rounded-pill px-5 fw-bold shadow-sm">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}