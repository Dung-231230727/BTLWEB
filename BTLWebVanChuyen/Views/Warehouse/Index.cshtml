@model IEnumerable<BTLWebVanChuyen.Models.Warehouse>

@{
    ViewData["Title"] = "Quản lý Kho hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h6 class="text-primary text-uppercase mb-1" style="letter-spacing: 1px;">Quản lý</h6>
        <h2 class="text-dark fw-bold m-0"><i class="fa-solid fa-warehouse me-2 text-primary"></i> @ViewData["Title"]</h2>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm hover-top">
        <i class="fa-solid fa-plus me-2"></i>Thêm kho hàng
    </a>
</div>

@* === FORM TÌM KIẾM & LỌC === *@
<div class="card shadow-sm mb-4 border-0 rounded-4">
    <div class="card-body bg-light rounded-4 p-4">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            @* Tìm kiếm *@
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0" placeholder="Tìm theo tên kho, địa chỉ..." value="@ViewData["CurrentFilter"]" />
                </div>
            </div>
            @* Lọc Khu vực *@
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-map text-muted"></i></span>
                    <select name="filterAreaId" class="form-select border-start-0" asp-items="ViewBag.AreaId">
                        <option value="">-- Tất cả Khu vực --</option>
                    </select>
                </div>
            </div>
            @* Nút Thao tác *@
            <div class="col-md-2">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
                        <i class="fa-solid fa-filter me-1"></i> Lọc
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-3" title="Xóa bộ lọc">
                        <i class="fa-solid fa-rotate-right"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@* === THÔNG BÁO TRẠNG THÁI === *@
@if (TempData["Message"] != null)
{
    <div class="alert alert-success rounded-4 shadow-sm mb-4 border-0 d-flex align-items-center">
        <i class="fa-solid fa-check-circle me-2 fa-lg"></i> @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger rounded-4 shadow-sm mb-4 border-0 d-flex align-items-center">
        <i class="fa-solid fa-circle-exclamation me-2 fa-lg"></i> @TempData["Error"]
    </div>
}

@* === DANH SÁCH KHO HÀNG === *@
<div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase font-weight-bold small border-0">Tên kho</th>
                        <th class="text-secondary text-uppercase font-weight-bold small border-0">Địa chỉ</th>
                        <th class="text-secondary text-uppercase font-weight-bold small border-0">Thuộc khu vực</th>
                        <th class="text-center text-secondary text-uppercase font-weight-bold small border-0" style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom">
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-box-archive text-warning"></i>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-dark d-block">@item.Name</span>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-muted">
                                <i class="fa-solid fa-location-dot me-1 text-secondary"></i> @item.Address
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-dark border border-info rounded-pill px-3">
                                    <i class="fa-solid fa-map-pin me-1"></i>@(item.Area?.AreaName ?? "Chưa gán")
                                </span>
                            </td>
                            <td class="pe-4 text-center">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning" title="Sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-info" title="Chi tiết">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Xóa">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center p-5">
                <i class="fa-solid fa-warehouse fa-3x text-muted mb-3"></i>
                <p class="text-muted">Không tìm thấy kho hàng nào phù hợp.</p>
                <a class="btn btn-outline-primary rounded-pill fw-bold" asp-action="Create">Tạo kho mới ngay</a>
            </div>
        }
    </div>
</div>